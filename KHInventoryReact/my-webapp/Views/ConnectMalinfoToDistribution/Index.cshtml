@using SignalRMVCChat.Service
@model (List<SignalRMVCChat.Models.autoGeneratedContext.MalInfos> malinfos, List<SignalRMVCChat.Models.autoGeneratedContext.Distribution> distributions)

@{
    ViewBag.Title = "وصل اطلاعات و تصحیح اطلاعات";
    Layout = "_Layout";
}

<div class="container">
    <a href="/ConnectMalinfoToDistribution/AddedList" > لیست اضافه شده ها</a>

    <h2 style="text-align: center">وصل اطلاعات و تصحیح اطلاعات</h2>
    <form  action="/ConnectMalinfoToDistribution/Save"  method="post">

        <input type="submit" value="ذخیره"/>
        <div class="row" dir="rtl">
            <table class="table col-md-6">
                <thead>
                <tr>
                    <th colspan="99">
                        <input onkeydown="Search(this)"/>
                         
                    </th>
                </tr>
                <tr>
                    <th>انتخاب </th>
                    <th>نام</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var m in Model.malinfos)
                {
                    <tr class="rmal">
                        <td><input required="required" type="radio" name="malId" value="@m.Id"/></td>
                        <td class="mal">@m.NameDamdar</td>
                    </tr>
                }
                </tbody>
            </table>

            <table class="table col-md-6">
                <thead>
                <tr>
                    <th colspan="99">
                        <input onkeydown="Search(this)"/>
                                          
                    </th>
                </tr>
                <tr>
                    <th>انتخاب </th>
                    <th>نام</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var m in Model.distributions)
                {
                    <tr class="rmal">
                        <td><input required="required" type="radio" name="disId" value="@m.Id"/></td>
                        <td class="mal">@m.NamVaNameKhanevadegi</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>


    </form>
</div>



<script>

function Search(THIS) {
    
    if (!$(THIS).val() || $(THIS).val()===''){
          $('.rmal').show();
    }else{
                  $('.rmal').hide();
 $('.rmal').has('.mal:contains("'+$(THIS).val()+'")').show();
    }
}
</script>