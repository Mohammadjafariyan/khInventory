                                        <td id="Telephone">@itm.Telephone</td>
                                        @* <td id="HomeTelephone">@itm.HomeTelephone</td> *@
                                        <td id="ShomareOzviateTaavoni">@itm.ShomareOzviateTaavoni</td>
