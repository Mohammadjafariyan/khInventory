                                <tr>
                                    <th id="i">ردیف</th>
                                    <th   id="Id" style="display: none">کد </th>
                                    <th   id="MalCount" >تعداد دام </th>
                                    
                                    @*<th id="Etehadie">اتحادیه</th>
