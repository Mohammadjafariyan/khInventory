                                        <td id="ZarfiatYaTedadeDamoTiur">@itm.ZarfiatYaTedadeDamoTiur</td>
                                        <td id="NodeNahade">@itm.NodeNahade</td>
                                        <td id="MeqdareTahviliKG">@itm.MeqdareTahviliKG</td>
                                        <td id="QeymateHarKGbeRIAL">@itm.QeymateHarKGbeRIAL</td>
                                        <td id="MaheSahmie">@itm.MaheSahmie</td>*@

                                    </tr>


